<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.idle.campers.accuse.dao.AccuseMapper">
	
	<!-- 아이디 제한 리스트 -->
	<select id="AccuseList">
		select * from tbl_accuse;
	</select>
	
	<!-- 아이디 제한 유저 아이디 정보 -->
	<select id="AccuseSelectOne" resultType="com.idle.campers.accuse.dao.AccuseVO">
		select * from tbl_accuse where accuse_userid = #{userId}
	</select>
	
	<!-- 아이디 제한 추가 -->
	<insert id="AccuseInsert">
		insert into tbl_accuse (accuse_brd, accuse_reply, accuse_date, accuse_report, accuse_content, accuse_state, accuse_result, accuse_rdate, accuse_userId)
		values(#{accuseBrd},#{reply},#{accuseDate},#{accuseReport},#{accuseContent},#{accuseState},#{accuseResult},#{accuseRdate},#{accuseUserId})
	</insert>
	
	<!-- 아이디 제한 수정 -->
	<update id="AccuseUpdate">
	
	</update>
	
	<!-- 아이디 제한 삭제 -->
	<delete id="AccuseDelete">
		delete from tbl_accuse where accuse_userid = #{accuseUserId}
	</delete>
	
</mapper>